<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emergency_call_confirmation_fragment_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/emergencyImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/emergency_confirmation_image"
        app:layout_constraintHeight_percent="0.5"

        >
    </ImageView>

    <TextView
        android:id="@+id/emergency_call_confirmation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emergency_call_confirmation_text"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergencyImage"
        />

    <Button
        android:id="@+id/call911"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/green_confirmation"
        android:text="@string/call_911"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>